create database dbEscola;
use dbEscola;

create table departamento(
nome_dept varchar(20),
predio varchar(15),
orcamento numeric(12,2),
primary key (nome_dept)
);

create table curso(
id_curso varchar(7),
titulo varchar(50),
nome_dept varchar(20),
creditos numeric(2,0),
primary key (id_curso),
foreign key (nome_dept) references departamento
);

create table instrutor(
ID varchar(5),
nome varchar(20) not null,
nome_dept varchar(20),
salario numeric(8,2),
primary key (ID),
foreign key (nome_dept) references departamento
);

create table secao(
id_curso varchar(8),
id_sec varchar(8),
semestre varchar(6),
ano numeric(4,0),
predio varchar(15),
numero_sala varchar(7),
id_periodo varchar(4),
primary key (id_curso, id_sec, semestre, ano),
foreign key (id_curso) references curso
);

create table ministra(
ID varchar(5),
id_curso varchar(8),
id_sec varchar(8),
semestre varchar(6),
ano numeric(4,0),
primary key (ID, id_curso, id_sec, semestre, ano),
foreign key (id_curso, id_sec, semestre, ano) references secao,
foreign key (ID) references instrutor
);
